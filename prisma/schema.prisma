generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with journey and boat information
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String? // Hashed password for email/password authentication
  onboarded Boolean  @default(false)
  onboardingData Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  accounts                Account[]
  boatMaintenanceTasks    BoatMaintenanceTask[]     @relation("BoatMaintenanceTasks")
  weatherRoutingTasks     WeatherRoutingTask[]      @relation("WeatherRoutingTasks")
  safetySystemsTasks      SafetySystemsTask[]       @relation("SafetySystemsTasks")
  budgetManagementTasks   BudgetManagementTask[]   @relation("BudgetManagementTasks")
  passagePlanningTasks    PassagePlanningTask[]     @relation("PassagePlanningTasks")
  domainProgress          DomainProgress[]

  @@map("users")
}

enum AccountProvider {
  Google @map("google") // the map is not working until prisma v7.0.0 is released
}

model Account {
  id         String          @id @default(uuid())
  userId     String
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider   AccountProvider
  providerId String          @map("provider_id")
  email      String
  createdAt  DateTime        @default(now()) @map("created_at")
  updatedAt  DateTime        @updatedAt @map("updated_at")

  @@unique([provider, providerId], name: "unique_account_provider", map: "unique_account_provider")
  @@map("accounts")
}

// Task status enum
enum TaskStatus {
  locked
  ready
  in_progress
  completed

  @@map("task_status")
}

// Base task fields - common to all domain-specific task tables
// Each domain-specific task table will have these fields plus domain-specific fields

// Boat Maintenance tasks
model BoatMaintenanceTask {
  id            String     @id @default(uuid())
  userId        String
  user          User       @relation("BoatMaintenanceTasks", fields: [userId], references: [id], onDelete: Cascade)
  
  // Task details
  task          String     // Task description
  priority      Int        // 1-5, where 1 is highest priority
  estimatedTime String?    // e.g., "2-3 hours", "1 day"
  status        TaskStatus @default(ready)
  progress      Int        @default(0) // 0-100 percentage
  
  // Timestamps
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")
  startedAt     DateTime?  @map("started_at")
  completedAt   DateTime?  @map("completed_at")

  @@index([userId, priority])
  @@index([userId, status])
  @@map("boat_maintenance_tasks")
}

