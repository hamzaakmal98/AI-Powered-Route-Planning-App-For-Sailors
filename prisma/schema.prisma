// Passage Planning tasks - focused on Route Planning (step 2)
model PassagePlanningTask {
  id            String     @id @default(uuid())
  userId        String
  user          User       @relation("PassagePlanningTasks", fields: [userId], references: [id], onDelete: Cascade)
  
  // Task details
  task          String     // Task description (focused on route planning activities)
  priority      Int        // 1-5, where 1 is highest priority
  estimatedTime String?    // e.g., "2-3 hours", "1 day"
  status        TaskStatus @default(ready)
  progress      Int        @default(0) // 0-100 percentage
  
  // Route planning specific fields (optional, can be added later if needed)
  // waypointCount    Int?     // Number of waypoints planned
  // routeDistance    Float?   // Total route distance in nautical miles
  
  // Timestamps
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")
  startedAt     DateTime?  @map("started_at")
  completedAt   DateTime?  @map("completed_at")

  @@index([userId, priority])
  @@index([userId, status])
  @@map("passage_planning_tasks")
}

// Domain progress tracking
model DomainProgress {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String   // Domain name: Boat Maintenance, Weather Routing, etc.
  progress  Int      @default(0) // 0-100 percentage
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, name])
  @@index([userId])
  @@map("domain_progress")
}

